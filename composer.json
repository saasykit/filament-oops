{
    "name": "saasykit/filament-oops",
    "description": "Never accidentally edit your Filament production panel again! Filament Oops displays a clear 'Production' warning, helping you avoid costly mistakes and keeping your development safe.",
    "keywords": [
        "saasykit",
        "laravel",
        "filament-oops"
    ],
    "homepage": "https://github.com/saasykit/filament-oops",
    "support": {
        "issues": "https://github.com/saasykit/filament-oops/issues",
        "source": "https://github.com/saasykit/filament-oops"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "SaaSykit",
            "email": "hi@saasykit.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "filament/filament": "^3.0",
        "spatie/laravel-package-tools": "^1.15.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^7.9",
        "nunomaduro/larastan": "^2.0.1",
        "orchestra/testbench": "^8.0",
        "pestphp/pest": "^2.1",
        "pestphp/pest-plugin-arch": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Saasykit\\FilamentOops\\": "src/",
            "Saasykit\\FilamentOops\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Saasykit\\FilamentOops\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Saasykit\\FilamentOops\\FilamentOopsServiceProvider"
            ],
            "aliases": {
                "FilamentOops": "Saasykit\\FilamentOops\\Facades\\FilamentOops"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}